<div id="new-project-modal" class="modal hide fade">
    <form class="modal-form" action="{{ url('commercial_project_new') }}" id="new-project-form" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3>{% trans %}New project{% endtrans %}</h3>
        </div>
        <div class="modal-body">
             {{ forms.input('name', 'Title'|trans, project.name) }}
             {{ forms.textarea('description', 'Description'|trans, project.description) }}
             {{ forms.select('customerUser', 'Customer'|trans, customersList, null, 'id', 'userLabel') }}
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal" >Close</a>
            <button type="submit" class="btn btn-primary">{% trans %}Save changes{% endtrans %}</button>
        </div>
    </form>
</div>

<script>
$(document).ready(function(){
        $("#new-project-form").validate({
                ignore: "input[type='text']:hidden",
                rules:{

                        label:{
                                required:true
                        },
                        customerUser:{
                                required:true
                        }
                },
                errorClass: "help-inline",
                errorElement: "span",
                errorPlacement: function(error, element) {
                    element.parent().after(error);
                },
                highlight:function(element, errorClass, validClass) {
                        $(element).parents('.control-group').removeClass('success');
                        $(element).parents('.control-group').addClass('error');
                },
                unhighlight: function(element, errorClass, validClass) {
                        $(element).parents('.control-group').removeClass('error');
                        $(element).parents('.control-group').addClass('success');
                }
        });
});

</script>