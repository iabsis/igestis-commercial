<div id="import-accounts" class="modal hide fade">
    <form class="modal-form form-horizontal" id="account-datas" method="post" action="{{ url('commercial_bank_account_import_result') }}" enctype="multipart/form-data">
        <div class="modal-header">
            <a type="button" class="close" data-dismiss="modal">Ã—</a>
            <h3>{% trans %}Import the operations of the bank account{% endtrans %}</h3>
        </div>
        <div class="modal-body">
            <div class="well well-small">
                <legend>{% trans %}Source file information{% endtrans %}</legend>
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" for="ofxFile">{% trans %}OFX file{% endtrans %}</label>
                        <div class="controls">
                            <input class="span9" type="file" name="ofxFile" value="" id="id-ofxFile" autocomplete="off">
                        </div>
                    </div>
                </fieldset>
            </div> 

        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">{% trans %}Close{% endtrans %}</a>
            <input type="submit" class="btn btn-primary" value="{% trans %}Next step{% endtrans %}">
        </div>
    </form>
</div>