{# empty Twig template #}
<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered table-condensed table-striped table-hover" id="table_data">
    <thead>
        <tr>
            <th>{% trans %}Invoice number{% endtrans %}</th>
            <th>{% trans %}Provider name{% endtrans %}</th>
            <th>{% trans %}Invoice date{% endtrans %}</th>
            <th>{% trans %}Buying price{% endtrans %}</th>
            <th>{% trans %}Total with taxes{% endtrans %}</th>
            <th>{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
       {% for row in data_table %}
            <tr>
                <td>{{ row.invoiceNum }}</td>
                <td>{{ row.providerUser.userLabel }}</td>
                <td>{{ row.invoiceDate|date("d/m/Y") }}</td>
                <td>{{ row.amountDf|number_format(2) }}</td>
                <td>{{ row.amountTi|number_format(2) }}</td>
                <td>
                    <a href="{{ url('commercial_provider_invoices_edit', {'Id':row.id}) }}" class="btn btn-mini a-visible-line-on-over">
                        <i class="icon-edit"></i> {% trans %}Edit{% endtrans %}
                    </a>
                    <a href="javascript:delete_provider_invoice('{{ row.id }}')" class="btn btn-danger btn-mini a-visible-line-on-over">
                        <i class="icon-trash icon-white"></i> {% trans %}Delete{% endtrans %}
                    </a>
                </td>
            </tr>
      {% endfor %}
    </tbody>
</table>