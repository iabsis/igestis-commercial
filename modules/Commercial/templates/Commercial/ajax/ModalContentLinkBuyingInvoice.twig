<form>
<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered table-condensed table-striped table-hover" id="buyingInvoiceTable">
   <thead>
       <tr>
           <th>{% trans %}Sel{% endtrans %}</th>
           <th>{% trans %}Provider{% endtrans %}</th>
           <th>{% trans %}Date{% endtrans %}</th>
           <th>{% trans %}Amount{% endtrans %}</th>
       </tr>
   </thead>
   <tbody>
      {% for row in availableBuyingInvoices %}
           <tr>
               <td><input type="checkbox" name="selected[]" value="{{ row.id }}"></td>
               <td>{{ row.providerUser.userLabel }}</td>
               <td>{{ row.invoiceDate ? row.invoiceDate|date('d/m/Y') : "" }}</td>
               <td>{{ row.amountTi|number_format(2) }}</td>                          
           </tr>
     {% endfor %}
   </tbody>
</table>
</form>