ALTER TABLE  `COMMERCIAL_ARTICLE` ADD  `import_id` MEDIUMINT NULL DEFAULT NULL ,
ADD INDEX (  `import_id` );

CREATE TABLE IF NOT EXISTS `COMMERCIAL_IMPORT_ARTICLES` (
  `id` mediumint(9) NOT NULL AUTO_INCREMENT,
  `company_id` mediumint(9) NOT NULL,
  `importer_contact_id` mediumint(9) DEFAULT NULL,
  `import_label` varchar(120) COLLATE utf8_unicode_ci DEFAULT NULL,
  `import_date` datetime NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci AUTO_INCREMENT=1 ;

ALTER TABLE  `COMMERCIAL_IMPORT_ARTICLES` ADD INDEX (  `company_id` );
ALTER TABLE  `COMMERCIAL_IMPORT_ARTICLES` ADD INDEX (  `importer_contact_id` );

ALTER TABLE  `COMMERCIAL_IMPORT_ARTICLES` ADD FOREIGN KEY (  `company_id` ) REFERENCES  `CORE_COMPANIES` (
`id`
) ON DELETE CASCADE ON UPDATE CASCADE ;

ALTER TABLE  `COMMERCIAL_IMPORT_ARTICLES` ADD FOREIGN KEY (  `importer_contact_id` ) REFERENCES  `CORE_CONTACTS` (
`id`
) ON DELETE SET NULL ON UPDATE CASCADE ;

ALTER TABLE  `COMMERCIAL_ARTICLE` ADD FOREIGN KEY (  `import_id` ) REFERENCES  `COMMERCIAL_IMPORT_ARTICLES` (
`id`
) ON DELETE CASCADE ON UPDATE CASCADE ;